menu "Korvo1 LED Audio Test"

config LED_AUDIO_STRIP_GPIO
    int "WS2812 data GPIO"
    default 19
    help
        GPIO that feeds the built-in Korvo WS2812 ring. GPIO19 is routed to the
        factory LED chain on Korvo-1 production boards.

config LED_AUDIO_LED_COUNT
    int "Number of pixels"
    default 12
    range 1 64
    help
        Total number of addressable LEDs on the Korvo-1 ring.

config LED_AUDIO_BRIGHTNESS
    int "Brightness (0-255)"
    default 64
    range 1 255
    help
        Global brightness scalar applied to every RGB value before writing it to the strip.

config AUDIO_SAMPLE_RATE
    int "Audio sample rate (Hz)"
    default 44100
    range 8000 48000
    help
        Sample rate for audio playback.

config LOG_SWEEP_DURATION_SEC
    int "Log sweep duration (seconds)"
    default 5
    range 1 30
    help
        Duration of the logarithmic frequency sweep test tone.

config LOG_SWEEP_START_FREQ
    int "Log sweep start frequency (Hz)"
    default 20
    range 20 20000
    help
        Starting frequency for the logarithmic sweep.

config LOG_SWEEP_END_FREQ
    int "Log sweep end frequency (Hz)"
    default 20000
    range 20 20000
    help
        Ending frequency for the logarithmic sweep.

    menu "Voice Assistant Configuration"
        config GEMINI_API_KEY
            string "Google Gemini API Key"
            default ""
            help
                Google Gemini API key for STT, LLM, and TTS functionality.
                Get your API key from: https://console.cloud.google.com/
                Enable APIs: Speech-to-Text, Generative Language (Gemini), Text-to-Speech

        config GEMINI_MODEL
            string "Gemini Model"
            default "gemini-2.5-flash"
            help
                Gemini model to use: "gemini-2.5-flash" (recommended), "gemini-2.5-pro", or "gemini-2.0-flash"

        config WIFI_SSID
            string "WiFi SSID"
            default ""
            help
                WiFi network SSID for internet connectivity (required for Gemini API)

        config WIFI_PASSWORD
            string "WiFi Password"
            default ""
            help
                WiFi network password

        config ENV_LLM_TTS_ENABLED
            bool "Enable LLM-TTS for environmental reports"
            default y
            help
                Enable LLM (Large Language Model) and TTS (Text-to-Speech) for environmental reports.
                When enabled, environmental reports will use Gemini LLM to generate natural language
                summaries and speak them via TTS. When disabled, reports will only be logged.
    endmenu

endmenu
